<div class="row">
  <%= render 'aside' %>
  <div class="col-md-8">
    <h3>Followings (<%= @users.count %>)</h3>
    <% if @users.present? %>
      <ul class="follow">
        <% @users.each do |user| %>
          <li id="followings-<%= user.id %>" class="clearfix">
            <%= link_to gravatar_for(user, size: 50), user %>
            <span class="user"><%= link_to user.name, user %></span>
            <% if current_user == @user %>
              <%= form_for(current_user.following_relationships.find_by(followed_id: user.id),
                           html: { method: :delete },
                           remote: true,
                           data: { confirm: "You shure?" }) do |f| %>
                <%= f.submit "Unfollow", class: "btn unfollow" %>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p><%= @user.name %>さんがフォローしているユーザーはいません</p>
    <% end %>
  </div>
</div>
<%= javascript_tag do %>
  $('.unfollow').click(function() {
    location.reload();
  });
<% end %>